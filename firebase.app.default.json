{
  "hosting": {
    "site": "{{ site_name }}",
    "public": "packages/app/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/home",
        "destination": "/",
        "type": 301
      },
      {
        "source": "/posts",
        "destination": "/",
        "type": 301
      },
      {
        "source": "/sign-up",
        "destination": "/join",
        "type": 301
      },
      {
        "source": "/connect-artists",
        "destination": "/connect-profiles",
        "type": 301
      },
      {
        "source": "/connect-accounts",
        "destination": "/connect-profiles",
        "type": 301
      },
      {
        "source": "/budget",
        "destination": "/controls",
        "type": 301
      }
    ],
    "headers": [
      {
        "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png)",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=7200"
        }]
      },
      {
        "source": "_next/**",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=31536000, immutable"
        }]
      }
    ]
  }
}
