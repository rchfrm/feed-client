{
  "name": "feed-monorepo",
  "version": "1.0.0",
  "description": "Repos for the App and the Admin panel",
  "private": true,
  "scripts": {
    "dev": "yarn workspace app dev",
    "dev:ssl": "run-p dev ssl",
    "dev:admin": "yarn workspace admin dev",
    "ssl": "dev-proxy --proxy 3000:3001 --key ./certificates/localhost.key --cert ./certificates/localhost.crt",
    "lint": "eslint -c ./.eslintrc.js --ignore-pattern node_modules --ext .js,.jsx ./packages/app/components",
    "lint:admin": "eslint -c ./.eslintrc.js --ignore-pattern node_modules --ext .js,.jsx ./packages/app/components",
    "stage": "./bin/deploy app staging",
    "deploy-production": "./deploy app production",
    "stage:admin": "./bin/deploy admin staging",
    "deploy-production:admin": "./deploy admin production",
    "pwa": "node bin/buildFavicons && cp -a ./packages/app/public/pwa ./packages/admin/public",
    "analyze-bundle": "yarn workspace app analyze-bundle",
    "analyze-bundle:admin": "yarn workspace admin analyze-bundle"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^4.0.4",
    "favicons": "^6.1.0",
    "lerna": "^2.9.0",
    "yarn-run-all": "^3.1.1"
  }
}
